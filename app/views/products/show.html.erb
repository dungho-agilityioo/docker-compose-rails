<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @product.title %>
</p>

<p>
  <strong>Description:</strong>
  <%= @product.description %>
</p>

<p>
  <strong>Image:</strong>
  <%= image_tag @product.image_url %>
</p>

<p>
  <strong>Price:</strong>
  <%= @product.price %>
</p>

<section id="comments">
	<% @product.comments.each do |comment| %>
	  <article id="comments:<%= comment.id %>">
	    <p><%= comment.user.email %>: <%= comment.content %></p>
	  </article>
	<% end %>
</section>

<%= form_for Comment.new, remote: true, id: 'new_comment', url: product_comments_path(@product) do |form| %>
    <%= form.text_area :content %>
    <%= form.hidden_field :product_id, :value =>@product.id %>
    <%= form.submit %>
<% end %>

<%= link_to 'Edit', edit_product_path(@product) %> |
<%= link_to 'Back', products_path %>
<br/>


